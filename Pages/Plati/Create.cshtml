                <span class="text-danger">*</span>
                <label asp-for="Plata.StatusPlata" class="control-label"></label>
                <input asp-for="Plata.StatusPlata" class="form-control" />
                <span asp-validation-for="Plata.StatusPlata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
