@page
@model Budica_Andrei_Proiect.Pages.Pacienti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Caută după nume..."
               name="searchString" value="@Model.SearchString">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Caută</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].CNP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].DataNasterii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].ObservatiiMedicale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].DataInregistrarii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pacient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasterii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObservatiiMedicale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInregistrarii)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
